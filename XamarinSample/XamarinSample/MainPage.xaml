<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinSample"
             x:Class="XamarinSample.MainPage">
    <ScrollView>
        <StackLayout
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand"
            Spacing="5"
            Padding="5">
            <Label Text="Registration Form" 
                FontSize="32"
                TextColor="Red"
                FontAttributes="Bold"/>
            <Label Text="Welcome to the registration form! Please fill out"
                FontSize="16"/>
            <Label Text="the following information to register for the event:"
                FontSize="16"/>
            <Label Text="Personal Information:"
                FontSize="16"
                TextColor="Blue"/>
            <Label Text="First name:"
                FontSize="16"/>
            <Entry Placeholder="First name"
                FontSize="16"/>
            <Label Text="Enter middle name:"
                FontSize="16"/>
            <Entry Placeholder=""
                FontSize="16"/>
            <Label Text="Last name:"
                FontSize="16"/>
            <Entry Placeholder="Last name"
                FontSize="16"
                FontAttributes="Italic"/>
        </StackLayout>
    </ScrollView>
	

</ContentPage>